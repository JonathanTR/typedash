.configurePanel
  box-sizing: border-box
  font-family: 'Inconsolata', monospace
  height: 28vh
  padding: 20px
  text-align: center

.configurePanel__option
  display: block
  margin-bottom: 16px
  text-align: center

.configurePanel__label
  display: inline-block
  margin-bottom: 6px

.configurePanel__button
  background: none
  border: none
  font-family: 'Inconsolata', monospace
  font-size: 1em
  outline: none
  &:hover
    cursor: pointer
    text-decoration: underline

.sessionLengthOption
  color: blue
  display: inline-block

.wordCountGoalInput
  background: honeydew
  border: none
  box-sizing: border-box
  font-family: 'Inconsolata', monospace
  font-size: 1em
  line-height: 1.2em
  outline: none
  width: 40px
  text-align: center
  &::-webkit-inner-spin-button,
  &::-webkit-outer-spin-button
    -webkit-appearance: none;
    margin: 0;