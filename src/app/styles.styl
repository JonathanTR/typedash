.wordcount
  color: dimgray
  display: block
  font-family: 'Inconsolata', sans-serif;
  font-size: 18px
  text-align: left
  margin: 0 auto
  padding: 22px
  padding-top: 0px
  width: 73%

.configure
  margin: 0 auto
  text-align: right
  width: 73%
.configure__label,
.configure__start
  background: none
  border: 1px solid lightgray
  border-top: 0px
  border-right: 0px
  box-sizing: border-box
  color: dimgray
  display: inline-block
  font-family: 'Inconsolata'
  font-size: 1em
  line-height: 30px
  padding: 0px
  position: relative
  text-align: center
  vertical-align: middle
  width: 30px
  &:hover
    cursor: pointer
    text-decoration: underline

.configure__label_selected
  background: turquoise
  color: white

.configure__radio
  display: none

.configure__start
  border-right: 1px solid lightgray
  width: 70px
